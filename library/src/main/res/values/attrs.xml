<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Preference">
        <attr name="key" format="string" />
        <attr name="icon" format="reference" />
        <attr name="title" format="string" />
        <attr name="summary" format="string" />
        <attr name="defaultValue" format="string" />
    </declare-styleable>

    <declare-styleable name="ListPreference">
        <attr name="entries" format="reference" />
        <attr name="entryValues" format="reference" />
        <attr name="entryAsSummary" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BooleanPreference">
        <attr name="iconOn" format="reference" />
        <attr name="iconOff" format="reference" />
        <attr name="summaryOn" format="string" />
        <attr name="summaryOff" format="string" />
    </declare-styleable>

    <declare-styleable name="ListItemLayout">
        <attr name="icon_circle_color" format="color" />
        <attr name="icon_circle_border_color" format="dimension" />
        <attr name="icon_circle_border_width" format="dimension" />
        <attr name="icon_circle_radius" format="dimension" />
        <attr name="icon_circle_radius_focused" format="dimension" />
    </declare-styleable>

</resources>